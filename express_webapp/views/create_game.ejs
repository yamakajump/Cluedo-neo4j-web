<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Partie Créée</title>
    <link rel="stylesheet" href="/css/game-menu.css"> <!-- Utilisation du CSS cartoon -->
</head>
<body>
    <div class="menu-container">
        <div class="frame">
            <h2>Partie Créée</h2>
            <p>Votre code de partie : <strong id="gameCode"><%= gameCode %></strong></p> <!-- Utilisation de EJS pour insérer les données -->
            <p>Créateur : <strong id="playerName"><%= playerName %></strong></p> <!-- Utilisation de EJS pour insérer les données -->
            <button class="copy-button" onclick="copyCode()">Copier le code</button>
            <button class="start-button" onclick="startGame()">Démarrer la partie</button>
        </div>
    </div>

    <script>
        const gameCode = '<%= gameCode %>';  // Injecter les données directement dans le script
        const playerName = '<%= playerName %>';

        function copyCode() {
            navigator.clipboard.writeText(gameCode);
            alert('Code copié : ' + gameCode);
        }

        function startGame() {
            alert('La partie va commencer !');
            // Logique pour démarrer la partie
        }
    </script>
</body>
</html>
