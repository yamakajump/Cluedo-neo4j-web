<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rejoindre une Partie</title>
    <link rel="stylesheet" href="/css/game-menu.css"> <!-- Utilisation du CSS cartoon -->
</head>
<body>
    <div class="menu-container">
        <div class="frame">
            <h2>Rejoindre la Partie</h2>
            <p>Code de la partie : <strong id="gameCode"><%= gameCode %></strong></p>
            <button class="copy-button" onclick="copyCode()">Copier le code</button>
            <p>Joueur : <strong id="playerName"><%= playerName %></strong></p>
            <h3>Joueurs dans la partie :</h3>
            <ul id="playersList">
                <!-- Liste des joueurs sera injectée ici par JavaScript -->
            </ul>
        </div>
    </div>

    <script>
        const gameCode = document.getElementById('gameCode').textContent;

        // Fonction pour copier le code de la partie sans popup
        function copyCode() {
            navigator.clipboard.writeText(gameCode).then(() => {
                console.log('Code de la partie copié :', gameCode);
            }).catch(err => {
                console.error('Échec de la copie du code :', err);
            });
        }

        // Fonction pour récupérer la liste des joueurs
        async function fetchPlayers() {
            try {
                const response = await fetch(`/api/game/getPlayers/${gameCode}`);
                const data = await response.json();
                const playersList = document.getElementById('playersList');
                
                // Effacer la liste actuelle
                playersList.innerHTML = '';

                // Ajouter chaque joueur à la liste
                data.players.forEach(player => {
                    const li = document.createElement('li');
                    li.textContent = player;
                    playersList.appendChild(li);
                });
            } catch (error) {
                console.error('Erreur lors de la récupération des joueurs :', error);
            }
        }

        // Rafraîchir la liste des joueurs toutes les 5 secondes
        setInterval(fetchPlayers, 5000);
        // Appeler une première fois la fonction pour charger immédiatement les joueurs
        fetchPlayers();
    </script>
</body>
</html>
