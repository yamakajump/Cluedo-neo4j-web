<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Montrer une carte</title>
    <link rel="icon" type="image/png" href="/images/logo/icon.png" />
    <link rel="stylesheet" href="/css/game.css">
</head>
<body>
    <div class="wrapper">
        <div class="container">
            <h1>Montrez une carte</h1>
            <p>Vous avez été interrogé. Montrez une carte parmi celles que vous possédez :</p>

            <!-- Afficher les cartes possédées par le joueur interrogé comme des boutons -->
            <div class="possessed-cards">
                <h2>Cartes que vous possédez :</h2>
                <div class="characters-list">
                    <% possessedCards.forEach(card => { %>
                        <div class="character-card">
                            <form method="POST" action="/game">
                                <input type="hidden" name="card" value="<%= card.type %>" />
                                <input type="hidden" name="type" value="show-card">
                                <button type="submit" style="background:none;border:none;padding:0;">
                                    <% if (card.type === 'room') { %>
                                        <img src="<%= hypothesis.room %>" alt="Salle" />
                                    <% } %>
                                    <% if (card.type === 'weapon') { %>
                                        <img src="<%= hypothesis.weapon %>" alt="Arme" />
                                    <% } %>
                                    <% if (card.type === 'suspect') { %>
                                        <img src="<%= hypothesis.suspect %>" alt="Personnage" />
                                    <% } %>
                                </button>
                            </form>
                        </div>
                    <% }); %>
                </div>
            </div>

            <!-- Si le joueur ne possède aucune carte à montrer, afficher un bouton -->
            <% if (possessedCards.length === 0) { %>
                <form method="POST" action="/game">
                    <input type="hidden" name="card" value="null" />
                    <input type="hidden" name="type" value="show-card">
                    <button type="submit" class="button">Aucune carte à montrer</button>
                </form>
            <% } %>
        </div>

        <!-- bouton pour les actions -->
        <div class="actions">
            <a href="/game/book" class="button">Voir le carnet de detective</a>
            <a href="/game/hypothese" class="button">Faire une proposition</a>
        </div>
    </div>

    <script>
        const gameCode = '<%= gameCode %>';

        // WebSocket pour suivre les mises à jour des joueurs en temps réel
        const ws = new WebSocket('ws://localhost:3001');

        ws.onopen = () => {
            console.log('Connecté au serveur WebSocket');
        };

        ws.onmessage = (event) => {
            const data = JSON.parse(event.data);
            if (data.gameCode === gameCode) {
                if (data.type === 'nextTurn') {
                    window.location.reload();
                }
            }
        };

        ws.onerror = (error) => {
            console.error('Erreur WebSocket :', error);
        };

        ws.onclose = () => {
            console.log('Déconnecté du serveur WebSocket');
        };
    </script>
</body>
</html>
