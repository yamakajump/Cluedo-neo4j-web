<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Choisir un personnage</title>

    <!-- icone du site -->
    <link rel="icon" type="image/png" href="/images/logo/icon.png" />

    <link rel="stylesheet" href="/css/game.css">
</head>
<body>
    <div class="container">
        <h1>Choisir un personnage</h1>
        <p>Choisissez un personnage parmi ceux disponibles :</p>

        <!-- Afficher un message d'erreur si `errorMessage` est défini -->
        <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
            <div class="error-message">
                <p style="color: red;"><%= errorMessage %></p>
            </div>
        <% } %>

        <!-- Conteneur pour les personnages disponibles -->
        <div id="availableProfs" class="characters-list">
            <!-- Les personnages disponibles seront injectés ici par le serveur -->
            <% availableProfs.forEach(prof => { %>
                <div class="character-card">
                    <form method="POST" action="/game">
                        <input type="hidden" name="characterName" value="<%= prof.name %>">
                        <input type="hidden" name="type" value="select-character">
                        <button type="submit" style="background:none;border:none;padding:0;">
                            <img src="<%= prof.image %>" alt="<%= prof.name %>" style="cursor:pointer;">
                        </button>
                    </form>
                </div>
            <% }) %>
        </div>

        <h2>Personnages déjà sélectionnés :</h2>
        <!-- Conteneur pour les personnages déjà sélectionnés -->
        <div id="selectedProfs" class="characters-list">
            <% selectedProfs.forEach(prof => { %>
                <div class="character-card">
                    <img src="<%= prof.image %>" alt="<%= prof.name %>">
                    <p><%= prof.playerName %></p>
                </div>
            <% }) %>
        </div>
    </div>
    <script>
        const gameCode = '<%= gameCode %>';

        // WebSocket pour suivre les mises à jour des joueurs
        const ws = new WebSocket('ws://localhost:3001');

        ws.onopen = () => {
            console.log('Connecté au serveur WebSocket');
        };

        ws.onmessage = (event) => {
            const data = JSON.parse(event.data);
            if (data.gameCode === gameCode) {
                if (data.type === 'playerChoose') {
                    fetchCharacters();
                }
            }
        };

        ws.onerror = (error) => {
            console.error('Erreur WebSocket :', error);
        };

        ws.onclose = () => {
            console.log('Déconnecté du serveur WebSocket');
        };

        // Fonction pour récupérer les personnages et mettre à jour l'affichage
        async function fetchCharacters() {
            window.location.reload();
        }
    </script>
</body>
</html>
