<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carte montrée</title>
    <link rel="icon" type="image/png" href="/images/logo/icon.png" />
    <link rel="stylesheet" href="/css/game.css">
</head>
<body>
    <div class="container">
        <h1>Carte montrée</h1>

        <!-- Afficher l'image de la carte montrée -->
        <% if (typeof cardImage !== 'undefined' && cardImage) { %>
            <h2>Voici la carte montrée :</h2>
            <div class="characters-list">
                <div class="character-card">
                    <img src="<%= cardImage %>" alt="Carte montrée" />
                    <p>Type de carte : <strong><%= cardType === 'weapon' ? 'Arme' : cardType === 'room' ? 'Salle' : 'Personnage' %></strong></p>
                </div>
            </div>
        <% } else { %>
            <!-- Message d'attente si aucune carte n'a été montrée -->
            <p><%= message || 'En attente de la réponse du joueur...' %></p>
        <% } %>

        <!-- Bouton pour passer au tour suivant -->
        <form method="POST" action="/game">
            <input type="hidden" name="type" value="next-turn">
            <button type="submit" class="button">Passer au tour suivant</button>
        </form>
    </div>

    <script>
        const gameCode = '<%= gameCode %>';

        // WebSocket pour suivre les mises à jour des joueurs en temps réel
        const ws = new WebSocket('ws://localhost:3001');

        ws.onopen = () => {
            console.log('Connecté au serveur WebSocket');
        };

        ws.onmessage = (event) => {
            const data = JSON.parse(event.data);
            if (data.gameCode === gameCode) {
                if (data.type === 'showCard') {
                    window.location.reload();
                }
            }
        };

        ws.onerror = (error) => {
            console.error('Erreur WebSocket :', error);
        };

        ws.onclose = () => {
            console.log('Déconnecté du serveur WebSocket');
        };
    </script>
</body>
</html>
