<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Partie en cours</title>
    <link rel="stylesheet" href="/css/game-menu.css"> <!-- Inclure votre CSS personnalisé -->
</head>
<body>
    <div class="menu-container">
        <div class="frame">
            <h2>Partie en cours</h2>
            <p>Code de la partie : <strong id="gameCode"><%= gameCode %></strong></p>
            <p>Votre ID : <strong id="playerId"><%= playerId %></strong></p>

            <h3>Actions du joueur</h3>
            <button class="button" onclick="move()">Déplacer vers une pièce</button>
            <button class="button" onclick="makeHypothesis()">Émettre une hypothèse</button>
            <button class="button" onclick="endTurn()">Terminer le tour</button>

            <h3>Informations sur la partie</h3>
            <div id="gameState">
                <!-- Informations sur l'état actuel du jeu -->
            </div>
        </div>
    </div>

    <script>
        const gameCode = '<%= gameCode %>';
        const playerId = '<%= playerId %>';

        // Fonction pour déplacer le joueur vers une pièce
        function move() {
            // TODO: Implémenter la logique pour déplacer le joueur
            alert('Déplacement vers une pièce en cours.');
        }

        // Fonction pour émettre une hypothèse
        function makeHypothesis() {
            // TODO: Implémenter la logique pour faire une hypothèse
            alert('Émettre une hypothèse.');
        }

        // Fonction pour terminer le tour
        function endTurn() {
            // TODO: Implémenter la logique pour terminer le tour
            alert('Tour terminé.');
        }

        // Fonction pour rafraîchir les informations de la partie
        async function fetchGameState() {
            try {
                const response = await fetch(`/api/game/state/${gameCode}`);
                const data = await response.json();
                document.getElementById('gameState').innerHTML = `
                    <p>Tour actuel: ${data.currentTurn}</p>
                    <p>Prochain joueur: ${data.nextPlayer}</p>
                `;
            } catch (error) {
                console.error('Erreur lors de la récupération de l\'état de la partie:', error);
            }
        }

        // Mettre à jour l'état du jeu toutes les 5 secondes
        setInterval(fetchGameState, 5000);
        fetchGameState();
    </script>
</body>
</html>
